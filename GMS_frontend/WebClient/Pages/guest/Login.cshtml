@page
@model WebClient.Pages.guest.LoginModel;
@{
}
<div class="card w-25 login-form">
    <div class="card-body p-3">
        <form method="post">
            <div class="text-danger">
                @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
            <div class="form-group m-3">
                <input required asp-for="Username" class="form-control" placeholder="UserName" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <input required asp-for="Password" type="password" class="form-control" placeholder="Password" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group m-3 d-flex justify-content-between">
               

                <a class="text-decoration-none fs-7 mt-1" href="#"></a>
            </div>
            <div class="form-group m-3 d-flex justify-content-center">
                <input type="submit" value="Login" class="btn btn-login w-100" />
            </div>
        </form>
    </div>
</div>
<style>
/* Định dạng nền trang */
body {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
    background-image: url("https://toplist.vn/images/800px/dai-hoc-fpt-182113.jpg");
    background-size: cover;
    background-position: center;
}

/* Căn giữa form login */
.login-form {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 350px;
    padding: 30px;
    background: rgba(255, 255, 255, 0.15); /* Nền kính mờ */
    border-radius: 15px;
    backdrop-filter: blur(15px) saturate(180%);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.3);
    text-align: center;
}

/* Input fields */
.login-form input {
    width: 100%;
    padding: 12px;
    margin: 10px 0;
    border: none;
    border-radius: 10px;
    background: rgba(255, 255, 255, 0.3);
    color: white;
    font-size: 16px;
    outline: none;
    transition: all 0.3s ease-in-out;
}

.login-form input::placeholder {
    color: rgba(255, 255, 255, 0.7);
}

/* Hiệu ứng hover cho input */
.login-form input:focus {
    background: rgba(255, 255, 255, 0.4);
    transform: scale(1.05);
}

/* Nút đăng nhập với màu xanh hiện đại */
.login-form .btn-login {
    width: 100%;
    padding: 12px;
    border: none;
    border-radius: 10px;
    background: linear-gradient(135deg, #2196F3, #00BCD4); /* Xanh dương gradient */
    color: white;
    font-size: 18px;
    font-weight: bold;
    text-transform: uppercase;
    cursor: pointer;
    margin-top: 15px;
    transition: 0.3s;
}

.login-form .btn-login:hover {
    background: linear-gradient(135deg, #00BCD4, #2196F3);
    transform: scale(1.05);
}

/* Hiệu ứng bóng khi hover */
.login-form:hover {
    box-shadow: 0 15px 35px rgba(255, 255, 255, 0.3);
}

/* Responsive */
@@media (max-width: 400px) {
    .login-form {
        width: 90%;
    }
}

</style>
